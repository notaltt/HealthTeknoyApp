<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_account"
    tools:context=".MyAccount.MyAccountPage">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="597dp"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/viewMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="FULL NAME"
            android:textColor="#632728"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewEmail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textFullName"
            android:layout_marginTop="10dp"
            android:text="INSTITUTIONAL EMAIL"
            android:textColor="#632728"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEmail2"
            android:layout_marginTop="10dp"
            android:text="ADDRESS"
            android:textColor="#632728"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textAddress"
            android:layout_marginTop="10dp"
            android:text="PHONE NUMBER"
            android:textColor="#632728"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textFullName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewMiddle"
            android:layout_alignParentStart="true"
            android:background="@drawable/edit"
            android:inputType="text" />

        <EditText
            android:id="@+id/textEmail2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewEmail2"
            android:layout_marginEnd="-234dp"
            android:background="@drawable/edit"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/textAddress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewAddress"
            android:layout_marginEnd="-234dp"
            android:background="@drawable/edit"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/textPhone"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewPhone"
            android:layout_marginEnd="-234dp"
            android:background="@drawable/edit"
            android:inputType="phone" />

        <TextView
            android:id="@+id/viewGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textPhone"
            android:layout_marginTop="10dp"
            android:text="GENDER"
            android:textColor="#632728"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textGender"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewGender"
            android:layout_marginEnd="-234dp"
            android:background="@drawable/edit"
            android:inputType="text" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateButton"
            android:layout_width="102dp"
            android:layout_height="48dp"
            android:layout_below="@id/textGender"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background2"
            android:text="UPDATE" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>